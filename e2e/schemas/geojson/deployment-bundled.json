                            ],
                            "properties": {
                              "type": {
                                "type": "string",
                                "enum": [
                                  "MultiLineString"
                                ]
                              },
                              "coordinates": {
                                "type": "array",
                                "items": {
                                  "type": "array",
                                  "minItems": 2,
                                  "items": {
                                    "type": "array",
                                    "minItems": 2,
                                    "items": {
