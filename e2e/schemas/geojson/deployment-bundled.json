                                  "minItems": 2,
                                  "items": {
                                    "type": "number"
                                  }
                                }
                              },
                              "bbox": {
                                "type": "array",
                                "minItems": 4,
                                "items": {
                                  "type": "number"
                                }
                              }
                            }
                          },
